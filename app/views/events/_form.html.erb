<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :venue, style: "display: block" %>
    <%= form.text_field :venue, required: true %>
  </div>

  <div>
    <%= form.label :organizer_id, style: "display: block" %>
    <%= form.text_field :organizer_id %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date, required: true %>
  </div>

  <div>
    <%= form.label :venue_capacity, style: "display: block" %>
    <%= form.number_field :venue_capacity, required: true %>
  </div>

  <div>
    <%= form.label :ticket_price, style: "display: block" %>
    <%= form.text_field :ticket_price, required: true %>
  </div>

  <div>
    <%= form.label :ticket_sold, style: "display: block" %>
    <%= form.number_field :ticket_sold %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, options_for_select(["Upcoming", "Completed"], @event.status) %>
  </div><br>

  <div>
    <%= form.submit "Submit", style: "padding: 10px 15px; border-radius: 5px; background-color: deepskyblue; color: black"%>
  </div>
<% end %>
